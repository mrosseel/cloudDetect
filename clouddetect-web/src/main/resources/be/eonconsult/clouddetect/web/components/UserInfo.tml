<span xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">

		<t:if test="userExists">
				${user.firstName} ${user.lastName} is logged in. <t:actionlink t:id="logout">(logout)</t:actionlink>
			<t:parameter name="else"> 	
				Please <t:actionlink t:id="login">login</t:actionlink> or <t:actionlink t:id="register">register</t:actionlink> 
	        </t:parameter>
		</t:if>
</span>
